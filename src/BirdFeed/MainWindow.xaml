<Window x:Class="BirdFeed.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="720" Width="1360">
    
    <Window.Resources>
        <SolidColorBrush x:Key="BackgroundBrush" Color="#01525d" />
        <SolidColorBrush x:Key="TextBrush" Color="#333333" />
        <SolidColorBrush x:Key="HighlightBrush" Color="#4099FF" />
        
        <Style TargetType="TextBlock" x:Key="ScreenName">
            <Setter Property="FontSize" Value="64" />
            <Setter Property="Foreground" Value="{StaticResource HighlightBrush}" />
        </Style>

        <Style TargetType="TextBlock" >
            <Setter Property="FontSize" Value="36" />            
        </Style>
    </Window.Resources>
    
    <Grid Background="{StaticResource BackgroundBrush}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.25*" />            
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="3*" />
            <ColumnDefinition Width="0.25*" />
        </Grid.ColumnDefinitions>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="2*" />
            <RowDefinition Height="1.5*" />
            <RowDefinition Height="3*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <Grid Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="2" Grid.RowSpan="5" Background="White" />        
        
        <TextBlock Text="{Binding SearchTerm}" Foreground="White" VerticalAlignment="Center" />
        <Image Source="{Binding CurrentTweet.UserImage}" Stretch="Uniform" Grid.Column="1" Grid.Row="1" Grid.RowSpan="3" Margin="50" />
        <TextBlock Text="{Binding CurrentTweet.ScreenName}" Grid.Column="2" Grid.Row="1" Style="{StaticResource ScreenName}" VerticalAlignment="Center" />
        <ContentControl Grid.Column="2" Grid.Row="2" Grid.RowSpan="2" x:Name="tweetContent" Margin="0,0,100,0" />
    </Grid>
</Window>
